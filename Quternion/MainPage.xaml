<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:control="clr-namespace:Quternion"
             x:Class="Quternion.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            <Button Text="Reload" Clicked="Button_Clicked_1"/>
            <Label Text="Horizon"/>
            <control:Adjust x:Name="horizon"/>
            <Label Text="Vertical"/>
            <control:Adjust x:Name="vertical"/>
            <Button Text="Toggle Sensor" Clicked="Button_Clicked"/>
            <Button Text="debug" Clicked="Button_Clicked_2"/>
            <Label x:Name="status" Text="?"/>
            <Label x:Name="point" Text="!"/>


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
